<div class="container">
   <div class="row">
   <div class style="padding: 50px;">
      <h3 class="border bg-light">
        <div class="mx-3">新規会員登録</h3></div>

   </div>
   </div>
 </div>
<div class="container">
<!--テーブル-->

    <div class="offset-md-2">
      
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
<div class="row mx-md-n5">
<div class="col py-3 px-md-5"><%= f.label :名前 %><%= f.label :（姓） %>
<%= f.text_field :first_name, autofocus: true ,class: "col-lx-5" %></div>
  <div class="col py-3 px-md-5"><%= f.label :（名）%>
    <%= f.text_field :last_name, autofocus: true ,class: "col-lx-5" %></div>
  </div>
  
  <div class="row mx-md-n5">
 <div class="col py-3 px-md-5"><%= f.label :フリガナ %><%= f.label :（セイ） %>
 <%= f.text_field :first_name_kana, autofocus: true ,class: "col-lx-5" %>
 </div>
  <div class="col py-3 px-md-5">
    <%= f.label :（メイ） %>
    <%= f.text_field :last_name_kana, autofocus: true ,class: "col-lx-5" %></div>
  </div>
   <div class="row mx-md-n5">
  <div class="col py-3 px-md-5">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  </div>
   <div class="row mx-md-n5">
  <div class="col py-3 px-md-5">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code, autofocus: true %>
    </div>
  </div>
   <div class="row mx-md-n5">
  <div class="col py-3 px-md-5">
     <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true ,class: "col-md-10" %></div>
  </div>
   <div class="row mx-md-n5">
  <div class="col py-3 px-md-5">
   <%= f.label :電話番号（ハイフンなし） %>
   <%= f.text_field :telephone_number, autofocus: true %>
   </div>
  </div>
   <div class="row mx-md-n5">
  <div class="col py-3 px-md-5">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>
   <div class="row mx-md-n5">
  <div class="col py-3 px-md-5">
    <%= f.label :パスワード（確認用） %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
   </div>
  </div>
   
 
<div class="container">
  <div class="row">
    <div class="offset-md-5">
      <div class style="padding: 20px;">
  <div class="actions">
    <%= f.submit "新規登録" ,class: "btn btn-success " %>
    <% end %>
  </div>

</div>
</div>
</div>
</div>

<div class="container">
   <div class="row">
   <div class style="padding: 50px;">
      <h3 class="border bg-light">
        <div class="mx-3">既に登録済の方</h3>
　　<h5><%=link_to"こちら", new_customer_session_path %>からログインしてください</h5></div>
   </div>
   </div>
 </div>


