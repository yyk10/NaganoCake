<div class="container">
   <div class="row">
   <div class style="padding: 50px;">
      <h3 class="border bg-light">
        <div class="mx-3">ショッピングカート</h3>
      <%= link_to public_cart_items_destroy_all_path, method: :delete do %>
		      <button class="btn btn-danger ">カートを空にする</button> </div>
      <% end %>
   </div>
   </div>
 </div>
　<div class="container">
　  <div class="row">
 <table class="table">
   　　<thead>
  <tr>
     <th scope="col">商品名</th>
     <th scope="col"></th>
     <th scope="col">単価（税込）</th>
     <th scope="col">数量</th>
     <th scope="col">小計</th>
     <th scope="col"></th>
   </tr>
   </thead>
   <tbody>
   <% @cart_items.each do |cart_item| %>
   <tr>
     <td><%= @item.get_profile_image(50,50) %> + <%= @cart_item.item.name %></td>
     <td><%= cart_item.item.with_tax_price%></td>
     <%= form_with model: @cart_item.item, url: public_cart_items_path, local: true do |f| %>
  <td><%= f.hidden_field :item_id, :value => "item.id" %>
      <%= f.select :amount, *[1..30] %>

      <%= f.submit "変更",class: "btn btn-success" %></td>
  <% end %>
  <td><%= cart_item.subtotal%></td>
  <td>
        <%= link_to "削除する", cart_item_path(@cart_item.id),class: "btn btn-sm btn-danger",method: :delete, "data-confirm" => "本当に削除しますか？" %>
  </td>
   </tr>

 </tbody>
 </table>



 <table class="table">
     <th scope="col">合計金額</th>
     <th scope="col"><%= @total.price.to_s(:delimited)%>円</th>
 </table>
   <% end %>
   </div>

 </div>
 </div>
 <div class ="container">
 <div class="row">
 <%= link_to "買い物を続ける",public_items_path,class: "btn btn-sm btn-success" %>
 <%= link_to "情報入力に進む",new_public_order_path %>
 </div>
 </div>