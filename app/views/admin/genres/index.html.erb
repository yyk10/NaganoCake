<div class="container">
   <div class="row">
    <div class style="padding: 50px;">

        <h3 class="border bg-light">ジャンル一覧・追加</h3>
    </div>
   </div>
 </div>

 <div class="container">
   <div class="row">

     <%= form_with model: [:admin, @genre], local: true do |f| %>

     <div class="field">
    <%= f.label :ジャンル名 %>
    <%= f.text_field :name, autofocus: true ,placeholder:"ジャンル名" %>
  </div>

    <%= f.submit "新規登録",class: "btn btn-success" %>
    <% end %>

  </div>
</div>
<div class="container">
  <div class="row">
     <table class="table">
  　　　<thead>
    <tr>
       <th scope="col">ジャンル</th>
    </tr>
  </thead>
  <tbody>
     <% @genres.each do |genre| %>
    <tr>
     <td><%= genre.name %></td>

      <td>
         <% if @genre.admin == current_admin %>
        <%= link_to "編集する", edit_admin_genre_path(@genre.id) ,class: "btn btn-success" %>
      </td>
    </tr>
      <% end %>
      <% end %>
  </tbody>
</table>
  </div>
</div>

